from tkinter import *
root = Tk()
control = 0

iceFrame = None
sweetFrame = None
toppingsFrame = None
milkFrame = None
baseFrame = None
openFrame = Frame(root, width = 1000, height = 1000)

def makeStringId(num, cat):
    stringIdArray = []
    if (num == 1):
        for i in range(cat):
            stringOnCrack = "Base: " + str(i + 1)
            stringIdArray.append(stringOnCrack)
    if (num == 2):
        for i in range(cat):
            stringOnCrack = "Milk Base: " + str(i + 1)
            stringIdArray.append(stringOnCrack)
    if (num == 3):
        for i in range(cat):
            stringOnCrack = "Topping : " + str(i + 1)
            stringIdArray.append(stringOnCrack)
    if (num == 4):
        for i in range(cat):
            stringOnCrack = "Sweetness Level: " + str(i + 1)
            stringIdArray.append(stringOnCrack)
    if (num == 5):
        for i in range(cat):
            stringOnCrack = "Ice " + str(i + 1)
            stringIdArray.append(stringOnCrack)
    print(stringIdArray)
    return stringIdArray

def makeButtonArray(frame, num, cat):
    drinkBases = []
    baseButton = [None] * cat
    textForBases = makeStringId(num, cat)
    for i in range(cat):
        print("real quick")
        baseButton[i] = Button(frame, text = textForBases[i], command = onClick)
        baseButton[i].pack()

def makeNxtFrame(frame, num, cat):
    frame = Frame(root, width = 1000, height = 1000)
    makeButtonArray(frame, num, cat)
    frame.pack()
    return frame
    print("this is working")


def onClick():
    global control
    global baseFrame
    global toppingsFrame
    global sweetFrame
    global iceFrame
    if (control == 0):
        openFrame.destroy()
        baseFrame = makeNxtFrame(baseFrame, 1, 5)
        buttonMilk = Button(baseFrame, text="this one is boba", command=diffClick).pack()
        baseFrame.pack()
        control = 2
    elif (control == 1):
        milkFrame.destroy()
        toppingsFrame = makeNxtFrame(toppingsFrame, 3, 6)
        control = 3
    elif (control == 2):
        baseFrame.destroy()
        toppingsFrame = makeNxtFrame(toppingsFrame,3, 6)
        control = 3
    elif (control == 3):
        toppingsFrame.destroy()
        sweetFrame = makeNxtFrame(sweetFrame, 4, 3)
        control = 4
    elif (control == 4):
        sweetFrame.destroy()
        iceFrame = makeNxtFrame(iceFrame, 5, 3)
        control = 5
    elif (control == 5):
        iceFrame.destroy()

def diffClick():
    global control
    global milkFrame
    baseFrame.destroy()
    control = 1
    milkFrame = Frame(root, width = 1000, height = 1000)
    makeButtonArray(milkFrame, 2, 6)
    milkFrame.pack()
    print("is this working?")

button1 = Button(openFrame, text = "click me", command = onClick)
button1.pack()
openFrame.pack()

root.mainloop()
